<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jryzkns.hacktion.MainActivity"
    tools:showIn="@layout/activity_main">

        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.jryzkns.hacktion.MainActivity"
        tools:showIn="@layout/activity_main"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/Profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_bg_round"
            android:padding="15dp"
            android:text="Profile"
            android:layout_alignTop="@+id/Reports"
            android:layout_alignLeft="@+id/Tutorial"
            android:layout_alignStart="@+id/Tutorial" />

        <Button
            android:id="@+id/Tutorial"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_bg_round"
            android:padding="15dp"
            android:text="Toturial"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp" />

        <Button
            android:id="@+id/Reports"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/button_bg_round"
            android:padding="15dp"
            android:text="Reports"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" />

        <Button
            android:id="@+id/InvasivePlants"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/button_bg_round"
            android:padding="15dp"
            android:text="Invasive Plants"
            android:layout_alignTop="@+id/Tutorial"
            android:layout_alignLeft="@+id/Reports"
            android:layout_alignStart="@+id/Reports"
            />

</RelativeLayout>
