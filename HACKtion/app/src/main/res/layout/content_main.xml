<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jryzkns.hacktion.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/Profile"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/browseButton"
        android:layout_alignStart="@+id/browseButton"
        android:layout_alignTop="@+id/myReport"
        android:background="@drawable/button_bg_round"
        android:onClick="profileButton"
        android:padding="15dp"
        android:text="Profile"
        tools:clickable="true" />

    <Button
        android:id="@+id/browseButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/button_bg_round"
        android:onClick="browseButton"
        android:padding="15dp"
        android:text="Browse" />

    <Button
        android:id="@+id/myReport"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/button_bg_round"
        android:onClick="reportButton"
        android:padding="15dp"
        android:text="My Activities" />

    <Button
        android:id="@+id/tutorialButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/myReport"
        android:layout_alignStart="@+id/myReport"
        android:layout_alignTop="@+id/browseButton"
        android:background="@drawable/button_bg_round"
        android:onClick="tutorialButton"
        android:padding="15dp"
        android:text="Tutorials" />

</RelativeLayout>
